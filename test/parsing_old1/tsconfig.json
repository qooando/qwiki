{
  "resolveJsonModule": true,
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./build",
    "paths": {}
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}