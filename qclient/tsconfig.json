{
  "resolveJsonModule": true,
  "compilerOptions": {
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "../build/tmp/client_js",
    "paths": {
      "@plugins/*": [
        "./plugins/*"
      ],
      "@qlient/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}