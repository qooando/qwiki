{
  "name": "qwiki",
  "version": "1.0.0",
  "description": "A lightweight and extendable wiki application",
  "main": "qwiki.js",
  "scripts": {
    "tsc": "tsc",
    "prestart": "npm run tsc --target es2015 ",
    "build": "npx tsc --target es2015 && cp -r ./src/resources ./dist/",
    "build+dev": "npx tsc --target es2015 && cp -r ./src/resources ./dist/ && node ./dist/app.js --listen",
    "dev": "node ./dist/app.js --listen",
    "release": "node ./dist/app.js",
    "test": "npx jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qooando/qwiki.git"
  },
  "author": "Qooando",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/qooando/qwiki/issues"
  },
  "homepage": "https://github.com/qooando/qwiki#readme",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0"
  }
}
