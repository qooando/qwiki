{
  "name": "qwiki",
  "version": "1.0.0",
  "description": "A lightweight and extendable wiki application",
  "main": "qwiki.js",
  "type": "module",
  "scripts": {
    "prestart": "npm run tsc --target es2015 ",
    "copy-statics": "sh copy-statics.sh",
    "build": "npx tsc && npm run copy-statics",
    "build+trace": "npx tsc --traceResolution && npm run copy-statics",
    "dev": "node --import ./dist/register.js ./dist/app.js --listen",
    "build+dev": "npm run build && npm run dev",
    "clean+build+dev": "npm run clean & npm run build && npm run dev",
    "release": "node --import ./dist/register.js ./dist/app.js ",
    "release-with-loader": "node --loader=./dist/loader.js ./dist/app.js ",
    "test": "npx jest",
    "clean": "rm -fr ./dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qooando/qwiki.git"
  },
  "author": "Qooando",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/qooando/qwiki/issues"
  },
  "homepage": "https://github.com/qooando/qwiki#readme",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-actuator": "^1.8.3",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node-json-transform": "^1.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@wesleytodd/openapi": "^1.0.0",
    "esm": "^3.2.25",
    "express": "^4.19.2",
    "express-actuator": "^1.8.4",
    "glob": "^10.3.12",
    "js-yaml": "^4.1.0",
    "localized-strings": "^0.2.4",
    "node-json-transform": "^1.1.2",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "yaml": "^2.4.1"
  },
  "_moduleAliases": {
    "@qwiki": "./dist",
    "@qlient": "./dist/client"
  }
}
